@using Microsoft.AspNetCore.Components.Authorization
@inherits LayoutComponentBase
@inject IJSRuntime JS
@inject NavigationManager Nav

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4 d-flex align-items-center">
            <AuthorizeView>
                <Authorized Context="authContext">
                    <button class="btn btn-link me-3" @onclick="StartTree" title="Starten">Starten</button>
                </Authorized>
            </AuthorizeView>
            @if (showBack)
            {
                <button class="btn btn-link me-3" @onclick="GoBack" title="Zurück">←</button>
            }
            <!-- top-row content (right side) kept minimal -->
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<!-- Blazor error UI removed: errors will be handled by the app's Error page -->

@code {
    private async Task GoBack()
    {
        await JS.InvokeVoidAsync("TreeEditor.goBack");
    }
    private bool showBack;

    private void StartTree()
    {
        Nav.NavigateTo("/tree");
    }

    protected override void OnParametersSet()
    {
        // If the base-relative path is empty, we're on home — hide back button
        var relative = Nav.ToBaseRelativePath(Nav.Uri);
        showBack = !string.IsNullOrEmpty(relative);
    }
}
