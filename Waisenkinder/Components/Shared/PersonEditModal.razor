@namespace ITP2Tree.Components.Shared
@using ITP2Tree.Data
@using Microsoft.AspNetCore.Components.Forms

<div class="modal-backdrop-custom" @onclick="Cancel">
    <div class="modal-card" @onclick:stopPropagation>
        <div class="d-flex align-items-center mb-3">
            <h5 class="mb-0">Person bearbeiten</h5>
            <button class="btn btn-sm btn-link ms-auto" @onclick="Cancel">Ã—</button>
        </div>

        <EditForm Model="EditPerson" OnValidSubmit="Save">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <div class="row">
                <div class="col-md-6 mb-2">
                    <label>Name</label>
                    <InputText @bind-Value="EditPerson.Name" class="form-control" />
                </div>
                <div class="col-md-6 mb-2">
                    <label>Geburtsort</label>
                    <InputText @bind-Value="EditPerson.Geburtsort" class="form-control" />
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-2">
                    <label>Geburtsdatum</label>
                    <InputText @bind-Value="EditPerson.Geburtsdatum" class="form-control" />
                </div>
                <div class="col-md-6 mb-2">
                    <label>Verwandte</label>
                    <InputText @bind-Value="EditPerson.Verwandte" class="form-control" />
                </div>
            </div>

            <div class="mb-2">
                <label>Notizen</label>
                <InputTextArea @bind-Value="EditPerson.Notizen" class="form-control" />
            </div>

            <div class="d-flex gap-2 mt-2 justify-content-end">
                <button class="btn btn-outline-secondary" type="button" @onclick="Cancel">Abbrechen</button>
                <button class="btn btn-primary" type="submit">Speichern</button>
            </div>
        </EditForm>
    </div>
</div>

@code {
    [Parameter, EditorRequired]
    public Person EditPerson { get; set; } = null!;

    [Parameter]
    public EventCallback<Person> OnSave { get; set; }

    [Parameter]
    public EventCallback OnCancel { get; set; }

    private async Task Save()
    {
        if (OnSave.HasDelegate)
            await OnSave.InvokeAsync(EditPerson);
    }

    private async Task CancelInternal()
    {
        if (OnCancel.HasDelegate)
            await OnCancel.InvokeAsync(null);
    }

    private Task Cancel() => CancelInternal();
}
