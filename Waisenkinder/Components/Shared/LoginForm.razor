@* 
    LoginForm-Komponente - Authentifizierung für bestehende Benutzer.
    Validiert Email und Passwort mit BCrypt-Verifikation.
*@
@namespace ITP2Tree.Components.Shared
@using System.ComponentModel.DataAnnotations
@using Microsoft.EntityFrameworkCore
@using ITP2Tree.Data
@inject AppDBContext Db
@inject NavigationManager Navigation
@inject ITP2Tree.Services.AuthService Auth

@* Fehlerausgabe *@
@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger">@errorMessage</div>
}

@* Login-Formular *@
<EditForm Model="loginModel" OnValidSubmit="HandleLogin">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-2">
        <label>E-Mail</label>
        <InputText @bind-Value="loginModel.Email" class="form-control" />
        <ValidationMessage For="() => loginModel.Email" />
    </div>
    <div class="mb-2">
        <label>Passwort</label>
        <InputText @bind-Value="loginModel.Password" Type="password" class="form-control" />
        <ValidationMessage For="() => loginModel.Password" />
    </div>
    <button class="btn btn-primary" type="submit">Login</button>
</EditForm>

@code {
    /// <summary>
    /// Callback-Event, das aufgerufen wird, wenn der Login erfolgreich war.
    /// </summary>
    [Parameter]
    public EventCallback OnSuccess { get; set; }

    /// <summary>
    /// Das Datenbindungsmodell für das Formular.
    /// </summary>
    private LoginModel loginModel = new();

    /// <summary>
    /// Fehlermeldung, die dem Benutzer angezeigt wird.
    /// </summary>
    private string? errorMessage;

    /// <summary>
    /// Datenmodell für die Login-Validierung.
    /// </summary>
    public class LoginModel
    {
        /// <summary>
        /// Die Email-Adresse des Benutzers.
        /// </summary>
        [Required(ErrorMessage = "E-Mail ist erforderlich.")]
        [EmailAddress(ErrorMessage = "Ungültige E-Mail-Adresse.")]
        public string Email { get; set; } = string.Empty;

        /// <summary>
        /// Das Passwort des Benutzers (Klartext, wird später gehasht verglichen).
        /// </summary>
        [Required(ErrorMessage = "Passwort ist erforderlich.")]
        public string Password { get; set; } = string.Empty;
    }

    /// <summary>
    /// Verarbeitet den Login:
    /// 1. Sucht den Benutzer in der Datenbank
    /// 2. Vergleicht das Passwort mit dem gehashten Passwort
    /// 3. Meldet den Benutzer an, wenn erfolgreich
    /// </summary>
    private async Task HandleLogin()
    {
        errorMessage = null;
        var user = await Db.Benutzer.FirstOrDefaultAsync(u => u.Email == loginModel.Email);
        if (user != null && BCrypt.Net.BCrypt.Verify(loginModel.Password, user.PasswortHash))
        {
            Auth.SignIn(user.Id);
            if (OnSuccess.HasDelegate)
            {
                await OnSuccess.InvokeAsync(null);
            }
            else
            {
                Navigation.NavigateTo("/protected");
            }
        }
        else
        {
            errorMessage = "Ungültige Anmeldedaten";
        }
    }
}
